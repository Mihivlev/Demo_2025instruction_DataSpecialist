<Window x:Class="ForDemo.UserPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ForDemo"
        mc:Ignorable="d"
        Title="UserPasswordWindow" Height="250" Width="400">
    <Grid>
		<Grid.RowDefinitions>
			<RowDefinition/>
			<RowDefinition/>
			<RowDefinition/>
		</Grid.RowDefinitions>
		<TextBlock x:Name="TBFIO" FontSize="25" HorizontalAlignment="Center" VerticalAlignment="Center"/>
		<TextBox Text="{Binding Path=Password}" FontSize="20" Grid.Row="1" VerticalAlignment="Center" Margin="10"/>
		<StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
			<Button Content="Сохранить" Click="Save" Width="120" Margin="10" Padding="5" FontSize="20"/>
			<Button Content="Отмена" Click="Cancel" Width="120" Margin="10" Padding="5" FontSize="20"/>
		</StackPanel>
	</Grid>
</Window>
