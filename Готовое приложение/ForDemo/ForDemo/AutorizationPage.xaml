<Page x:Class="ForDemo.AutorizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ForDemo"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AutorizationPage" Background="White">

    <Grid>
		<Grid HorizontalAlignment="Center" VerticalAlignment="Center">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="*"/>
			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions>
				<RowDefinition Height="*"/>
				<RowDefinition Height="*"/>
				<RowDefinition Height="*"/>
				<RowDefinition Height="*"/>
			</Grid.RowDefinitions>

			<TextBlock Text="Авторизация" FontSize="25" Grid.ColumnSpan="2" Margin="10" HorizontalAlignment="Center"/>

			<TextBlock Text="Логин" FontSize="20" Margin="10" Grid.Row="1"/>
			<TextBox Name="ILogin" FontSize="20" Margin="10" Grid.Row="1" Grid.Column="1" Width="150"/>

			<TextBlock Text="Пароль" FontSize="20" Margin="10" Grid.Row="2"/>
			<TextBox Name="IPassword" FontSize="20" Margin="10" Grid.Row="2" Grid.Column="1" Width="150"/>

			<Button Content="Войти" Click="Enter" Grid.Row="3" FontSize="20" Grid.ColumnSpan="2" HorizontalAlignment="Center" Padding="5" Margin="10"/>
		</Grid>
	</Grid>
</Page>

	